<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".ControlActivity">

        <!-- Status & Disconnect -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_disconnected"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface" />

                <Button
                    android:id="@+id/btnDisconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Disconnect"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorError" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Motor Controls -->
        <!-- M1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardM1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cardStatus">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvM1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_m1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnM1Fwd"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="@string/btn_forward"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnM1Stop"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="@string/btn_stop"
                        android:backgroundTint="@color/colorError"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnM1Back"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="@string/btn_backward"
                         android:backgroundTint="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- M2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardM2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cardM1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvM2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_m2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnM2Fwd"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="@string/btn_forward"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnM2Stop"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="@string/btn_stop"
                        android:backgroundTint="@color/colorError"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnM2Back"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="@string/btn_backward"
                        android:backgroundTint="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Speed -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cardM2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_speed"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface"/>

                <SeekBar
                    android:id="@+id/seekBarSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:max="100"
                    android:progress="0"
                    android:minHeight="32dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Log -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Log:"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardSpeed" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_launcher_background"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardSpeed"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:textColor="@color/black"/>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

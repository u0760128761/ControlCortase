<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/colorSurface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_enter_password_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorOnSurface"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvDialogSsid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Name"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/wifi_password"
        android:textColorHint="@color/colorOnSurfaceVariant"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorSecondary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/colorOnSurface"
            android:textColorHint="@color/colorOnSurfaceVariant"/>
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/cbRememberNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_remember_network"
        android:textColor="@color/colorOnSurface"
        android:checked="true"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:backgroundTint="@color/colorSurfaceVariant"
            android:textColor="@color/colorOnSurface"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_connect"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
